{
    "compilerOptions": {
        // strictness
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        // transpiling
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "es2022",
        "outDir": "dist",
        // running
        "lib": [
            "es2022"
        ]
    }
}