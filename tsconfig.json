{
    "compilerOptions": {
        "skipLibCheck": true,
        // strictness
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        // transpiling
        "module": "preserve",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        // running
        "lib": [
            "es2022"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
