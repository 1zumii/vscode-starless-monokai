{
    "compilerOptions": {
        // strictness
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        // transpiling
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "es2022",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        // running
        "lib": [
            "es2022"
        ],
    },
    "include": [
        "src/**/*"
    ]
}