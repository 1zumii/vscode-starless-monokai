{
    "compilerOptions": {
        // strictness
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        // transpiling
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "es2022",
        "outDir": "dist-script",
        // running
        "lib": [
            "es2022"
        ],
    },
    "include": [
        "src/**/*"
    ]
}