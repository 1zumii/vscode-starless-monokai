{
    "name": "vscode-starless-monokai",
    "type": "module",
    "private": true,
    "license": "MIT",
    "engines": {
        "node": ">24.0.0"
    },
    "scripts": {
        "generate": "node ./src/index.ts",
        "generate:watch": "echo \"Generating extension...\" && node --watch-path=./src ./src/index.ts",
        "lint": "eslint src",
        "lint:type": "tsc",
        "prepublish": "npm run lint:type && npm run lint && npm run generate",
        "publish": "cd dist/extension && vsce publish && ovsx publish",
        "register-hooks": "simple-git-hooks",
        "postinstall": "npm run register-hooks"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "color": "^4.2.3",
        "fs-extra": "^11.1.1",
        "undici": "^7.13.0",
        "unzipper": "^0.10.14"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^2.27.3",
        "@types/color": "^3.0.6",
        "@types/fs-extra": "^11.0.3",
        "@types/node": "^20.8.7",
        "@types/unzipper": "^0.10.8",
        "@types/vscode": "^1.78",
        "@vscode/vsce": "^v3.6.0",
        "eslint": "^8.52.0",
        "ovsx": "^0.10.5",
        "simple-git-hooks": "^2.13.1",
        "tsdown": "^0.15.1",
        "type-fest": "^4.41.0",
        "typescript": "^5.9.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run lint:type && npm run lint"
    }
}
